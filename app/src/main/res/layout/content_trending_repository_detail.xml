<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.xapo.test.githubtrendingandroid.activity.TrendingRepositoryDetailActivity"
    tools:showIn="@layout/activity_trending_repository_detail_layout">


    <TextView
        android:id="@+id/name_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:text="NAME:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_value_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/name_label_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/html_url_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="HTML URL:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/name_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/name_label_textView" />

    <TextView
        android:id="@+id/html_url_value_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="10dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/html_url_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/name_value_textView" />

    <TextView
        android:id="@+id/des_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="DESCRIPTION:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/html_url_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/html_url_label_textView" />

    <TextView
        android:id="@+id/des_value_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/des_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/des_label_textView" />


</android.support.constraint.ConstraintLayout>
